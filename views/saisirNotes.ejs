<%- include('header_connected') %>
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des moyennes</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <br>
        <h1 class="display-4">Liste des moyennes</h1>

        <br>
        <a href="/secretariat/ajouterMoyenne" class="btn btn-secondary">Ajouter</a>
        <br><br>

        <!-- Tableau pour afficher les moyennes existantes -->
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Élève</th>
                    <th scope="col">Moyenne</th>
                    <th scope="col">Semestre</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% moyennes.forEach(moyenne=> { %>
                <tr>
                    <td><%= moyenne.utilisateur %></td>
                    <td><%= moyenne.moyenne %></td>
                    <td><%= moyenne.semestre %></td>
                    <td>
                        <a href="/secretariat/modifierMoyenne/<%= moyenne.id %>" class="btn btn-warning">Modifier</a>
                        <a href="/secretariat/supprimerMoyenne/<%= moyenne.id %>" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
