<%- include('header_connected') %>
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier la moyenne</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>Modifier la moyenne</h1>
        <form action="/secretariat/modifierMoyenne/<%= moyenne.id %>" method="POST">
            <div class="form-group">
                <label for="nouvelleMoyenne">Nouvelle moyenne :</label>
                <input type="number" class="form-control" id="nouvelleMoyenne" name="nouvelleMoyenne" value="<%= moyenne.moyenne %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </form>
    </div>
</body>

</html>
