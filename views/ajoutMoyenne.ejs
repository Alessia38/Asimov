<%- include('header_connected') %>
    <!DOCTYPE html>
    <html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Liste des moyennes</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="/style.css">
    </head>

    <body>
        <div class="container">
            <!-- Formulaire pour ajouter une moyenne -->
            <form action="/secretariat/ajoutMoyenne" method="post">
                <div class="form-group">
                    <br>
                    <label for="utilisateurId">Élève :</label>
                    <select class="form-control" id="utilisateurId" name="utilisateurId">
                        <% utilisateurs.forEach(utilisateur=> { %>
                            <option value="<%= utilisateur.id %>">
                                <%= utilisateur.nom %>
                                    <%= utilisateur.prenom %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="nouvelleMoyenne">Moyenne :</label>
                    <input type="text" class="form-control" id="moyenne" name="moyenne" placeholder="00.00">
                </div>
                <div class="form-group">
                    <label for="semestre">Semestre :</label>
                    <select class="form-control" id="semestre" name="semestre">
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Ajouter Moyenne</button>
            </form>
        </div>
    </body>

    </html>